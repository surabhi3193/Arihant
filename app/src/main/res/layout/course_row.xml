<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/mainLay">

    <TextView

        android:text="M.B.A"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"/>

    <TextView
        android:background="@drawable/textview_back_of_item"
        android:layout_marginTop="10dp"
        android:text="Course Details"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textSize="20sp"/>

    <TableLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TableRow
            android:padding="5dp"
            android:id="@+id/row1">
            <TextView
                android:textStyle="bold"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Duration"
                android:textColor="@color/Red"
                android:textSize="14sp" />

            <TextView
                android:text="90 days"
                android:id="@+id/durationTv"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </TableRow>


        <TableRow
            android:padding="5dp">
            <TextView
                android:text="Eligibility"
                android:minWidth="150dp"
                android:maxWidth="150dp"
                android:id="@+id/nameTV"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/Red"
                android:textSize="14sp" />
            <TextView
                android:text="12th Pass with 50% (Maths Stream)"
                android:id="@+id/eligibilityTV"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:padding="5dp">
            <TextView
                android:text="Total Seats"
                android:minWidth="150dp"
                android:maxWidth="150dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/Red"
                android:textSize="14sp" />
            <TextView
                android:text="60 seats"
                android:id="@+id/seatsTv"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:padding="5dp">
            <TextView
                android:text="Fees"
                android:minWidth="150dp"
                android:maxWidth="150dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/Red"
                android:textSize="14sp" />
            <TextView
                android:text="As per University standard"
                android:id="@+id/feeTv"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </TableRow>

        <TableRow
            android:padding="5dp">
            <TextView
                android:text="Admission Process"
                android:minWidth="150dp"
                android:maxWidth="150dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/Red"
                android:textSize="14sp" />
            <TextView
                android:text="60 seats"
                android:id="@+id/admissionTV"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </TableRow>

    </TableLayout>

</LinearLayout>